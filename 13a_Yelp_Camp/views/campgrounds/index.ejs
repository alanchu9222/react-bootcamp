<% include ../partials/header %>

	<div class="container">
		<header class="jumbotron">
			<div class="container">

				<h1>
					Welcome to Yelp Camp
				</h1>
				<p>
					View our hand picked camp grounds from around the world
				</p>
				<p>
					<a class="btn btn-large btn-primary" href="/campgrounds/new">Add a new campground</a>
				</p>
			</div>

		</header>
		<div class="row text-center" style="display:flex; flex-wrap:wrap;">
			<% campgrounds.forEach(function(campground) { %>
				<div class="col-md-3 col-sm-6">
					<div class="img-thumbnail">
						<img class="img-thumbnail" src="<%=campground.image%>">
						<div class="caption">
							<%=campground.name%>
						</div>
						<p>
							<a class="btn btn-primary" href="/campgrounds/<%=campground._id%>">More Info</a>
						</p>
						
					</div>
				</div>
				<% });%>
		</div>
	</div>
	<% include ../partials/footer %>