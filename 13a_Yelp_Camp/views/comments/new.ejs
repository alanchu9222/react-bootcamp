<% include ../partials/header %>

<div class="container">
	<h1 style="text-align: center">
		Add a new comment to <%=campground.name%>
	</h1>
	
	<div class="row">
		<div style="width:30%; margin: 40px auto;">
		<a href="/campgrounds">Back to campgrounds</a>
		<form action="/campgrounds/<%=campground._id%>/comments" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="comment[text]" placeholder="comment">				
			</div>

			<button class="btn btn-primary btn-lg btn-default btn-block">
				Submit!
			</button>
		</form>		
		</div>
	</div>
</div>
