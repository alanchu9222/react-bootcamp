<!DOCTYPE html>
<html>
  <head>
    <title>Melbourne City Food Trucks</title>
    <!-- Latest compiled and minified CSS -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Latest compiled and minified CSS -->
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Permanent+Marker|Raleway&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.2/css/all.min.css"
    />
    <script src="https://api.mapbox.com/mapbox-gl-js/v1.3.1/mapbox-gl.js"></script>
    <link
      href="https://api.mapbox.com/mapbox-gl-js/v1.3.1/mapbox-gl.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/stylesheets/main.css" />
  </head>

  <body>
    <nav class="navbar fixed-top navbar-expand-lg navbar-light bg-light">
      <button
        class="navbar-toggler navbar-dark"
        type="button"
        data-toggle="collapse"
        data-target="#navbarTogglerDemo01"
        aria-controls="navbarTogglerDemo01"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
        <div class="navbar-header">
          <a class="btn btn-lg btn-primary btn-ripple" href="/foodtrucks"
            >Melbourne City Food Trucks</a
          >
        </div>

        <ul class="navbar-nav ml-auto mt-2 mt-lg-0 ">
          <li>
            <a
              class="btn btn-lg btn-primary btn-ripple nav-button"
              href="/foodtrucks/citymap"
              >City Map</a
            >
          </li>

          <% if(!currentUser){ %>
          <li>
            <a
              class="btn btn-lg btn-primary btn-ripple nav-button"
              href="/login"
              >Login</a
            >
          </li>
          <li>
            <a
              class="btn btn-lg btn-primary btn-ripple nav-button"
              href="/register"
              >Sign Up</a
            >
          </li>
          <% } else { %>
          <li class="nav-item">
            <a class="btn btn-lg btn-primary disabled " href="#"
              >User: <%= currentUser.username %></a
            >
          </li>

          <li>
            <a
              class="btn btn-lg btn-primary btn-ripple nav-button"
              href="/foodtrucks/new"
              >Add a Truck</a
            >
          </li>
          <li>
            <a
              class="btn btn-lg btn-primary btn-ripple nav-button"
              href="/logout"
              >Logout</a
            >
          </li>
          <% } %>
        </ul>
      </div>
    </nav>

    <div class="container container-margin">
      <% if(error && error.length > 0){ %>
      <div class="alert alert-danger" role="alert">
        <%= error %>
      </div>
      <% } %> <% if(success && success.length > 0){ %>
      <div class="alert alert-success" role="alert">
        <%= success %>
      </div>
      <% } %>
    </div>
  </body>
</html>
