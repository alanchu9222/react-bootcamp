<div class="container-fluid">
  <div class="row">
    <div class="col-lg-4 col-md-3 col-sm-2 col-2"></div>
    <div class="col-lg-4 col-md-6 col-sm-8 col-8">
      <div class="form-header">Login</div>
      <form action="/login" method="post">
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="username"
            placeholder="username"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="password"
            name="password"
            placeholder="password"
          />
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-ripple btn-block">
            Login
          </button>
        </div>
      </form>
      <div class="form-footer"><a href="/foodtrucks">Go Back</a></div>
    </div>
  </div>
</div>

