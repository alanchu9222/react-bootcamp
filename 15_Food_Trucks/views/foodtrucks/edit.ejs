<% include ../partials/header %>
<div class="container">
  <div class="row">
    <h1 style="text-align: center">Edit <%= foodtruck.name %></h1>
    <div style="width: 80%; margin: 25px auto;">
      <form action="/foodtrucks/<%= foodtruck._id %>?_method=PUT" method="POST">
        <div class="column">
          <div class="form-group">
            <input
              class="form-control"
              type="text"
              name="foodtruck[name]"
              value="<%= foodtruck.name %>"
            />
          </div>
          <div class="form-group">
            <input
              class="form-control"
              type="text"
              name="foodtruck[email]"
              value="<%= foodtruck.email %>"
            />
          </div>
          <div class="form-group">
            <input
              class="form-control"
              type="text"
              name="foodtruck[phone]"
              value="<%= foodtruck.phone %>"
            />
          </div>
          <div class="form-group">
            <input
              class="form-control"
              type="text"
              name="foodtruck[category]"
              value="<%= foodtruck.category %>"
            />
          </div>

          <div class="form-group">
            <input
              class="form-control"
              type="text"
              name="foodtruck[image]"
              value="<%= foodtruck.image %>"
            />
          </div>

          <div class="form-group">
            <textarea
              class="form-control"
              rows="5" 
              name="foodtruck[description]"
              value="<%= foodtruck.description %>"
            ></textarea>            
          </div>
        </div>
        <div class="column">
          <h4>dummy text</h4>
          <h4>dummy text</h4>
          <h4>dummy text</h4>
          <h4>dummy text</h4>
          <h4>dummy text</h4>
          <h4>dummy text</h4>
          <h4>dummy text</h4>
          <h4>dummy text</h4>
        </div>

        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>
      </form>
      <a href="/foodtrucks">Go Back</a>
    </div>
  </div>
</div>
<% include ../partials/footer %>
