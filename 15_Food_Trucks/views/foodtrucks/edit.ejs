<% include ../partials/header %>
<div class="container">
  <div class="row">
    <h1 style="text-align: center">Edit <%= foodtruck.name %></h1>
    <div style="width: 80%; margin: 25px auto;">
      <form action="/foodtrucks/<%= foodtruck._id %>?_method=PUT" method="POST">
        <div class="column">
          <div class="form-group">
            <input
              placeholder="Name"
              class="form-control"
              type="text"
              name="foodtruck[name]"
              value="<%= foodtruck.name %>"
            />
          </div>
          <div class="form-group">
            <input
              placeholder="Email"
              class="form-control"
              type="text"
              name="foodtruck[email]"
              value="<%= foodtruck.email %>"
            />
          </div>
          <div class="form-group">
            <input
              placeholder="Phone"
              class="form-control"
              type="text"
              name="foodtruck[phone]"
              value="<%= foodtruck.phone %>"
            />
          </div>
          <div class="form-group">
            <input
              placeholder="Category"
              class="form-control"
              type="text"
              name="foodtruck[category]"
              value="<%= foodtruck.category %>"
            />
          </div>

          <div class="form-group">
            <input
              placeholder="Image url"
              class="form-control"
              type="text"
              name="foodtruck[image]"
              value="<%= foodtruck.image %>"
            />
          </div>
          <div class="form-group">
            <input
              id="location"
              placeholder="Location"
              class="form-control"
              type="text"
              name="foodtruck[location]"
              value="<%= foodtruck.location %>"
            />
          </div>

          <div class="form-group">
            <textarea
              placeholder="Business description"
              class="form-control"
              rows="12"
              name="foodtruck[description]"
            >
<%= foodtruck.description %></textarea
            >
          </div>
        </div>
        <div class="column">
          <% for (let i=0;i<10;i++) { %>
          <div class="form-group">
            <input
              placeholder="Menu Item"
              class="form-control column60"
              type="text"
              name="foodtruck[item]"
              value="<%= foodtruck.item[i] %>"
            />
            <input
              placeholder="Price"
              class="form-control column30"
              type="text"
              name="foodtruck[price]"
              value="<%= foodtruck.price[i] %>"
            />
          </div>
          <%} %>
        </div>

        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-ripple btn-block">
            Submit!
          </button>
        </div>
      </form>
      <a href="/foodtrucks">Go Back</a>
    </div>
  </div>
</div>
<% include ../partials/footer %>
