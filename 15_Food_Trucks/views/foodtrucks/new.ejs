<% include ../partials/header %>

<div class="container">
  <h1 style="text-align: center">
    Add a food truck
  </h1>

  <div class="row">
    <div style="width:60%; margin: 40px auto;">
      <a href="/foodtrucks">Back</a>
      <form action="/foodtrucks" method="POST">
        <div class="column">
          <div class="form-group">
            <input
              class="form-control"
              type="text"
              name="name"
              placeholder="Business name"
            />
          </div>
          <div class="form-group">
            <input
              class="form-control"
              type="text"
              name="email"
              placeholder="Email"
            />
          </div>
        </div>
        <div class="column">
          <div class="form-group">
            <input
              class="form-control"
              type="text"
              name="category"
              placeholder="Category"
            />
          </div>
          <div class="form-group">
            <input
              class="form-control"
              type="text"
              name="phone"
              placeholder="Phone"
            />
          </div>
        </div>
        <div class="form-group" style="width: 95%; margin:20px 10px">
          <input
            class="form-control"
            type="text"
            name="image"
            placeholder="Image url"
          />
        </div>
        <div class="form-group" style="width: 95%; margin:20px 10px">
          <input
            id="location"
            class="form-control"
            type="text"
            name="location"
            placeholder="Location"
          />
        </div>

        <div>
          <textarea
            placeholder="Business description"
            style="width: 95%; margin:20px 10px"
            class="form-control"
            rows="6"
            name="description"
          ></textarea>
        </div>

        <button
          class="btn btn-primary btn-ripple btn-lg btn-default btn-block"
          style="width: 95%; margin:20px 10px"
        >
          Submit!
        </button>
      </form>
    </div>
  </div>
</div>
<% include ../partials/footer %>
